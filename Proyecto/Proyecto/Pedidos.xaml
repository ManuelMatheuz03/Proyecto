                       Style="{StaticResource purpleLabel}"/>
                <Button Text="Ver"
                       Grid.Row="9"
                       Grid.Column="3"
                       Style="{StaticResource purpleLabel}"/>


                <Button Text="Semana Uno Mayo"
                       Grid.Row="10"
                       Grid.Column="0"
                       Style="{StaticResource whiteLabel}"/>
                <Button Text="478"
                       Grid.Row="10"
                       Grid.Column="1"
                       Style="{StaticResource whiteLabel}"/>
                <Button Text="Editar"
                       Grid.Row="10"
                       Grid.Column="2"
                       Style="{StaticResource purpleLabel}"/>
                <Button Text="Ver"
                       Grid.Row="10"
                       Grid.Column="3"
                       Style="{StaticResource purpleLabel}"/>



                <Button Grid.ColumnSpan="4"
                        Style="{StaticResource purpleLabel}"
                        Grid.Row="11"></Button>

            </Grid>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>