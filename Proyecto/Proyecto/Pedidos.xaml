                       Grid.Column="1"
                       Style="{StaticResource whiteLabel}"/>
                <Button Text="Editar"
                       Grid.Row="6"
                       Grid.Column="2"
                       Style="{StaticResource purpleLabel}"/>
                <Button Text="Ver"
                       Grid.Row="6"
                       Grid.Column="3"
                       Style="{StaticResource purpleLabel}"/>


                <Button Text="Semana Cuatro Mayo"
                       Grid.Row="7"
                       Grid.Column="0"
                       Style="{StaticResource whiteLabel}"/>
                <Button Text="478"
                       Grid.Row="7"
                       Grid.Column="1"
                       Style="{StaticResource whiteLabel}"/>
                <Button Text="Editar"
                       Grid.Row="7"
                       Grid.Column="2"
                       Style="{StaticResource purpleLabel}"/>
                <Button Text="Ver"
                       Grid.Row="7"
                       Grid.Column="3"
                       Style="{StaticResource purpleLabel}"/>


                <Button Text="Semana Tres Mayo"
                       Grid.Row="8"
                       Grid.Column="0"
                       Style="{StaticResource whiteLabel}"/>
                <Button Text="478"
                       Grid.Row="8"
                       Grid.Column="1"
